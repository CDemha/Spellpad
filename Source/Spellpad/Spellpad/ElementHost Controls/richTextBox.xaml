<UserControl x:Class="Spellpad.richTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <TextBox Name="txtEdit" SpellCheck.IsEnabled="True" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Disabled"  HorizontalScrollBarVisibility="Disabled">
            <TextBox.ContextMenu>
                <ContextMenu x:Name="ctxMenu">
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>
    </Grid>
</UserControl>
